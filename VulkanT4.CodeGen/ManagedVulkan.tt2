						}		
					}
					command.PriorStatements.Add(variableName + " = new " + elementType + "[" + param.LengthConditions[0] + "];");
										
				}
				else
				{
					bool needCallVariable =
						param.Translation != null
						&& (
							param.Translation.StructInfo != null 
