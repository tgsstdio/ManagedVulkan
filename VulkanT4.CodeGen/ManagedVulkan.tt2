						command.PriorStatements.Add('\t' + command.SourcePath + "->CopyTo(" + command.ArgumentName + ", pins);");
						command.PriorStatements.Add('\t' + command.DestinationPath + " = " + command.InstanceName + ";");
						command.PriorStatements.Add("}");
