		<#= param.Name #> = gcnew <#= paramType #>(<#= paramValue #>);
<#
//  BEGIN - SET INTERNAL HANDLE INST MEMBER
						if (param.Translation.ProxyInfo != null || param.Translation.HandleInfo != null)
